<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= applicationName; %></title>

    <%- include('./scripts'); %>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i class="fas fa-bars"></i
            ></a>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="#"> Logout </a>
          </li>
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" style="font-size: 30px" class="brand-link">
          <img src="<%= BASE_URL+softwareLogo %>" class="img-fluid" alt="" />
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user panel (optional) -->
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <img
                src="dist/img/avatar5.png"
                class="img-circle elevation-2"
                alt="User Image"
              />
            </div>
            <div class="info">
              <a href="#" class="d-block"
                ><%= [user.firstName,user.lastName].join(" "); %> (<%= user.role %>)</a
              >
            </div>
          </div>

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a href="/dashboard" class="nav-link">
                  <i class="nav-icon fas fa-building text-primary"></i>
                  <p>Dashboard</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/firms" class="nav-link">
                  <i class="nav-icon fas fa-building text-primary"></i>
                  <p>Firms</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/clients" class="nav-link">
                  <i class="nav-icon fas fa-users text-success"></i>
                  <p>Clients</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/products" class="nav-link">
                  <i class="nav-icon fas fa-box text-info"></i>
                  <p>Products / Services</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/taxes" class="nav-link">
                  <i class="nav-icon fas fa-percentage text-warning"></i>
                  <p>Taxes</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/invoice/list" class="nav-link">
                  <i
                    class="nav-icon fas fa-file-invoice-dollar text-danger"
                  ></i>
                  <p>Invoices</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/users" class="nav-link">
                  <i class="nav-icon fas fa-user text-info"></i>
                  <p>Users</p>
                </a>
              </li>
              

              <li class="nav-item">
                <a href="/profile" class="nav-link">
                  <i class="nav-icon fas fa-user-circle text-secondary"></i>
                  <p>My Profile</p>
                </a>
              </li>

             

              <li class="nav-item">
                <a href="/setting" class="nav-link">
                  <i class="nav-icon fas fa-user-circle text-secondary"></i>
                  <p>Settings</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/change-password" class="nav-link">
                  <i class="nav-icon fas fa-key text-primary"></i>
                  <p>Change Password</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/api/users/logout" class="nav-link">
                  <i class="nav-icon fas fa-sign-out-alt text-danger"></i>
                  <p>Logout</p>
                </a>
              </li>
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      
   